# {{{ validate_input
sub validate_input {
  my $val   = shift;
  my $dname = shift;
  my $cfg   = shift;

  if(exists $cfg->{MinVal}) {
    my ($minval) = grep { $_->[0] eq $dname } @{$cfg->{MinVal}};
    return if defined $minval && $minval->[1] > $val;
  }

  if(exists $cfg->{MaxVal}) {
    my ($maxval) = grep { $_->[0] eq $dname } @{$cfg->{MaxVal}};
    return if defined $maxval && $maxval->[1] < $val;
  }

  if(exists $cfg->{MinLength}) {
    my ($minlen) = grep { $_->[0] eq $dname } @{$cfg->{MinLength}};
    return if defined $minlen && $minlen->[1] > length($val);
  }

  if(exists $cfg->{MaxVal}) {
    my ($maxlen) = grep { $_->[0] eq $dname } @{$cfg->{MaxLength}};
    return if defined $maxlen && $maxlen->[1] < length($val);
  }

  return 1;
}
