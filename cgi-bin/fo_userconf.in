# {{{ send password
elsif($action eq 'sendpw') {
  if($cgi->param('email')) {
    my $username = $cgi->param('uname');

    my $connstr = 'DBI:'.$fo_userconf_conf->{SQLDriver}->[0]->[0].':dbname='.$fo_userconf_conf->{SQLDatabase}->[0]->[0].
       ($fo_userconf_conf->{SQLHost} ? ';host='.$fo_userconf_conf->{SQLHost}->[0]->[0] : '').
       ($fo_userconf_conf->{SQLPort} ? ';port='.$fo_userconf_conf->{SQLPort}->[0]->[0] : '');

    my $dbh     = DBI->connect($connstr,$fo_userconf_conf->{SQLUser}->[0]->[0],$fo_userconf_conf->{SQLPass}->[0]->[0]);
        die 'could not connect to database: '.DBI::errstr unless $dbh;


    my ($table,$usercol,$passwdcol,$emailcol) = (
      $fo_userconf_conf->{UserTable}->[0]->[0],
      $fo_userconf_conf->{UserColumn}->[0]->[0],
      $fo_userconf_conf->{PasswdCol}->[0]->[0],
      $fo_userconf_conf->{EmailCol}->[0]->[0]
    );

    my $dbq = $dbh->prepare('SELECT '.$passwdcol.','.$emailcol.' FROM '.$table.' WHERE username = ?');
    $dbq->execute($username);
    my $result = $dbq->fetchrow_hashref;

    if($result) {
      # send mail
      my $body = $fo_userconf_conf->{SMTPBody}->[0]->[0];
      $body =~ s!\{\$pass\}!$result->{$passwdcol}!g;
      $body =~ s!\{\$email\}!$result->{$emailcol}!g;
      $body =~ s!\{\$user\}!$username!g;
      
      my $smtp = new Net::SMTP($fo_userconf_conf->{SMTPHost}->[0]->[0]);
      $smtp->from($fo_userconf_conf->{SMTPFrom}->[0]->[0]);
      $smtp->to($result->{$emailcol});
      $smtp->data();
      $smtp->datasend('From: '.$fo_userconf_conf->{SMTPFrom}->[0]->[0]."\n");
      $smtp->datasend('To: '.$result->{$emailcol}."\n");
      $smtp->datasend('Subject: '.$fo_userconf_conf->{SMTPSubject}->[0]->[0]."\n\n");
      $smtp->datasend($body);
      $smtp->dataend();
      $smtp->quit();

      # send user output
      my $tpl = new CForum::Template(get_template($fo_default_conf,$user_config,$fo_userconf_conf->{SendPassOK}->[0]->[0]));
      $tpl->setVar('script',recode($fo_default_conf,$fo_default_conf->{UserRegister}->[0]->[0]));
      $tpl->setVar('forumbase',recode($fo_default_conf,$fo_default_conf->{BaseURL}->[0]->[0]));
      $tpl->setVar('charset',$fo_default_conf->{ExternCharset}->[0]->[0]);
      $tpl->setVar('acceptcharset',$fo_default_conf->{ExternCharset}->[0]->[0].', UTF-8');
    }
    else {
      my $tpl = new CForum::Template(get_template($fo_default_conf,$user_config,$fo_userconf_conf->{SendPassErr}->[0]->[0]));
      $tpl->setVar('script',recode($fo_default_conf,$fo_default_conf->{UserRegister}->[0]->[0]));
      $tpl->setVar('forumbase',recode($fo_default_conf,$fo_default_conf->{BaseURL}->[0]->[0]));
      $tpl->setVar('charset',$fo_default_conf->{ExternCharset}->[0]->[0]);
      $tpl->setVar('acceptcharset',$fo_default_conf->{ExternCharset}->[0]->[0].', UTF-8');
    }

  }
  else {
    my $tpl = new CForum::Template(get_template($fo_default_conf,$user_config,$fo_userconf_conf->{SendPass}->[0]->[0]));

    $tpl->setVar('script',recode($fo_default_conf,$fo_default_conf->{UserRegister}->[0]->[0]));
    $tpl->setVar('forumbase',recode($fo_default_conf,$fo_default_conf->{BaseURL}->[0]->[0]));
    $tpl->setVar('charset',$fo_default_conf->{ExternCharset}->[0]->[0]);
    $tpl->setVar('acceptcharset',$fo_default_conf->{ExternCharset}->[0]->[0].', UTF-8');

    print $cgi->header(-type => 'text/html; charset='.$fo_default_conf->{ExternCharset}->[0]->[0]),$tpl->parseToMem;
  }
}
# }}}
else {
  # {{{ show options
  if($UserName) {
    my $tpl = new CForum::Template(get_template($fo_default_conf,$user_config,$fo_userconf_conf->{ViewSettings}->[0]->[0])) or die $@;

    $tpl->setVar('forumbase',recode($fo_default_conf,$fo_default_conf->{UBaseURL}->[0]->[0]));
    $tpl->setVar('script',recode($fo_default_conf,$fo_default_conf->{UserConfig}->[0]->[0]));

    foreach my $modconf (@{$fo_userconf_conf->{ModuleConfig}}) {
      my $doc   = XML::GDOME->createDocFromURI($modconf->[0]) or die $!;
      my @nodes = $doc->findnodes('/config/page/section/*');

      foreach my $directive (@nodes) {
        my $dname     = $directive->getAttribute('name');
        my @arguments = $directive->getElementsByTagName('argument');
        my $i         = 0;

        foreach my $arg (@arguments) {
          my $pname = $arg->getAttribute('paramname');
          my $val   = $user_config->{$dname}->[0]->[$i++];

          next if !defined($val) || !length($val);

          if($arg->getAttribute('parse') eq 'date') {
            my ($sec,$min,$hour,$day,$mon,$year) = localtime $val;

            $mon  += 1;
            $year += 1900;

            $val = sprintf('%02d. %02d. %4d %02d:%02d:%02d',$day,$mon,$year,$hour,$min,$sec);
          }
          else {
            $val =~ s/\"/"/g; #";
            $val =~ s/\\n/<br>\n/g;
          }

          $tpl->setVar($pname,recode($fo_default_conf,$val||''));
        }
      }
    }

    $tpl->setVar('charset',$fo_default_conf->{ExternCharset}->[0]->[0]);
    $tpl->setVar('acceptcharset',$fo_default_conf->{ExternCharset}->[0]->[0].', UTF-8');

    print $cgi->header(-type => 'text/html; charset='.$fo_default_conf->{ExternCharset}->[0]->[0]),$tpl->parseToMem;
  }
  # }}}
  else {
    # {{{ register user
    if($action eq 'register') {
      my ($user,$passwd,$passwd1,$email) = ($cgi->param('username'),$cgi->param('passwd'),$cgi->param('passwd1'),$cgi->param('email'));

      my ($min_uname)  = grep { $_->[0] eq 'UserName' } @{$fo_userconf_conf->{MinLength}};
      my ($min_passwd) = grep { $_->[0] eq 'Password' } @{$fo_userconf_conf->{MinLength}};

      my ($table,$usercol,$passwdcol,$emailcol) = (
        $fo_userconf_conf->{UserTable}->[0]->[0],
        $fo_userconf_conf->{UserColumn}->[0]->[0],
        $fo_userconf_conf->{PasswdCol}->[0]->[0],
        $fo_userconf_conf->{EmailCol}->[0]->[0]
      );

      if(length($user) < $min_uname->[1]) {
        show_register_form(
          $cgi,
          $fo_default_conf,
          $fo_view_conf,
          $fo_userconf_conf,
          $user_config,
          sprintf(get_error($fo_default_conf,'uname','short'),$min_uname->[1])
        );
        exit;
      }

      if(length($passwd) < $min_passwd->[1]) {
        show_register_form(
          $cgi,
          $fo_default_conf,
          $fo_view_conf,
          $fo_userconf_conf,
          $user_config,
          sprintf(get_error($fo_default_conf,'pass','short'),$min_passwd->[1])
        );
        exit;
      }

      if($passwd ne $passwd1) {
        show_register_form(
          $cgi,
          $fo_default_conf,
          $fo_view_conf,
          $fo_userconf_conf,
          $user_config,
          get_error($fo_default_conf,'pass','match')
        );
        exit;
      }

      if($user !~ /^[\da-z]+$/) {
        show_register_form(
          $cgi,
          $fo_default_conf,
          $fo_view_conf,
          $fo_userconf_conf,
          $user_config,
          get_error($fo_default_conf,'uname','invalid')
        );
        exit;
      }

      if(!is_email($email)) {
        show_register_form(
          $cgi,
          $fo_default_conf,
          $fo_view_conf,
          $fo_userconf_conf,
          $user_config,
          get_error($fo_default_conf,'email','invalid')
        );
        exit;
      }

      if($passwd !~ /^[a-zA-Z0-9!\"§$_<>.%&\\\/()=?-]+$/ || $passwd !~ /\d/ || $passwd !~ /[a-zA-Z]/) {
        show_register_form(
          $cgi,
          $fo_default_conf,
          $fo_view_conf,
          $fo_userconf_conf,
          $user_config,
          get_error($fo_default_conf,'pass','invalid')
        );
        exit;
      }

      my $ufile = get_config_file($fo_default_conf,$user);
      if(-f $ufile) {
        show_register_form(
          $cgi,
          $fo_default_conf,
          $fo_view_conf,
          $fo_userconf_conf,
          $user_config,
          get_error($fo_default_conf,'uname','exists')
        );
        exit;
      }

      if(!create_directory_structure($fo_default_conf,$user)) {
        show_register_form(
          $cgi,
          $fo_default_conf,
          $fo_view_conf,
          $fo_userconf_conf,
          $user_config,
          get_error($fo_default_conf,'user','create')
        );
        exit;
      }

      my $connstr = 'DBI:'.$fo_userconf_conf->{SQLDriver}->[0]->[0].':dbname='.$fo_userconf_conf->{SQLDatabase}->[0]->[0].
                    ($fo_userconf_conf->{SQLHost} ? ';host='.$fo_userconf_conf->{SQLHost}->[0]->[0] : '').
                    ($fo_userconf_conf->{SQLPort} ? ';port='.$fo_userconf_conf->{SQLPort}->[0]->[0] : '');

      my $dbh = DBI->connect($connstr,$fo_userconf_conf->{SQLUser}->[0]->[0],$fo_userconf_conf->{SQLPass}->[0]->[0]);
      die 'could not connect to database: '.DBI::errstr unless $dbh;

      my $dbq = $dbh->prepare('INSERT INTO '.$table.' ('.$usercol.','.$passwdcol.','.$emailcol.') VALUES (?,?,?)');
      $dbq->execute($user,$passwd,$email) or do {
        show_register_form(
          $cgi,
          $fo_default_conf,
          $fo_view_conf,
          $fo_userconf_conf,
          $user_config,
          get_error($fo_default_conf,'user','create')
        );
        exit;
      };
      $dbh->disconnect;

      my $dir = $ufile;
      $dir =~ s!\.conf$!!; #!;

      mkdir $dir,0771 or die $!;

      open DAT,'>'.$ufile or die $!;
      print DAT 'DeletedFile "',$dir,"/dt.dat\"\n";
      print DAT 'VisitedFile "',$dir,"/vt.dat\"\n";
      close DAT;

      my $tpl = new CForum::Template(get_template($fo_default_conf,$user_config,$fo_userconf_conf->{RegisterOk}->[0]->[0]));

      $tpl->setVar('ubase',recode($fo_default_conf,$fo_default_conf->{UBaseURL}->[0]->[0]));
      $tpl->setVar('forumbase',recode($fo_default_conf,$fo_default_conf->{BaseURL}->[0]->[0]));
      $tpl->setVar('script',recode($fo_default_conf,$fo_default_conf->{UserRegister}->[0]->[0]));
      $tpl->setVar('uscript',recode($fo_default_conf,$fo_default_conf->{UserConfig}->[0]->[0]));
      $tpl->setVar('charset',$fo_default_conf->{ExternCharset}->[0]->[0]);
      $tpl->setVar('acceptcharset',$fo_default_conf->{ExternCharset}->[0]->[0].', UTF-8');

      print $cgi->header(-type => 'text/html; charset='.$fo_default_conf->{ExternCharset}->[0]->[0]),$tpl->parseToMem;
    }
    # }}}
    # {{{ show register form
    else {
      show_register_form($cgi,$fo_default_conf,$fo_view_conf,$fo_userconf_conf,$user_config);
    }
    # }}}
  }
}

